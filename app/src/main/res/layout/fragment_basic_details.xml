                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioGroup_gender"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:theme="@style/RadioButtonTheme"
                    android:clickable="false"
                    >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton_male"
                        android:text="Male"
                        android:textColor="@color/text_black"
                        android:textSize="13sp"
                        android:checked="true"
                        android:clickable="false"
                        />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton_female"
                        android:text="Female"
                        android:textSize="13sp"
                        android:layout_marginStart="25dp"
                        android:textColor="@color/text_black"
                        android:clickable="false"/>

                </RadioGroup>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    >

                    <EditText
                        android:id="@+id/editText_birthdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/birthdate"
                        android:editable="false"
                        android:focusable="false"
                        android:clickable="false"
                        android:enabled="false"
                        android:inputType="none"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:singleLine="true"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="15dp"
                    android:theme="@style/TextLabel"

                    >

                    <EditText
                        android:id="@+id/editText_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:editable="false"
                        android:focusable="false"
                        android:enabled="false"
                        android:hint="@string/age"
                        android:singleLine="true"
                        android:textColor="@color/text_black"
                        android:textSize="15sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginTop="15dp"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    >

                    <EditText
                        android:id="@+id/editText_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:editable="false"
                        android:clickable="false"
                        android:focusable="false"
                        android:hint="@string/time"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:singleLine="true"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioGroup_birthTimeType"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:theme="@style/RadioButtonTheme"
                    >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton_accurate"
                        android:layout_marginStart="10dp"
                        android:text="@string/accurate"
                        android:checked="true"
                        android:textSize="13sp"
                        android:textColor="@color/text_black"
                        android:layout_gravity="center_vertical"
                        />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton_approx"
                        android:text="@string/approx"
                        android:textSize="13sp"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/text_black"
                        android:layout_gravity="center_vertical"/>

                </RadioGroup>
            </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="15dp"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_birthPlace"
                        android:hint="@string/birth_place"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:inputType=""
                        android:singleLine="true"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="15dp"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_birthState"
                        android:hint="@string/birth_state"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:inputType=""
                        android:singleLine="true"
                        android:clickable="false"
                        android:focusable="false"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_birthStateId"
                    android:visibility="gone"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:layout_marginTop="15dp"
                    >

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"

                        android:theme="@style/TextLabel"
                        android:textColorHint="@color/text_black">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText_birthDistrict"
                            android:hint="@string/birth_district"
                            android:textColor="@color/text_black"
                            android:textSize="15sp"
                            android:singleLine="true"
                            android:clickable="false"
                            android:focusable="false"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_birthDistrictId"
                        android:visibility="gone"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_birthTalukaId"
                        android:visibility="gone"
                        />


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"

                        android:theme="@style/TextLabel"

                        android:textColorHint="@color/text_black"
                        >

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText_birthTaluka"
                            android:hint="@string/birth_taluka"
                            android:textColor="@color/text_black"
                            android:focusable="false"
                            android:clickable="false"
                            android:textSize="15sp"
                            android:singleLine="true"

                            />


                    </com.google.android.material.textfield.TextInputLayout>





                </LinearLayout>




                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:theme="@style/TextLabel">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_mobileNo"
                        android:hint="@string/mobile"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:enabled="false"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:theme="@style/TextLabel">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_altMobileNo"
                        android:hint="@string/alt_mobile"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="15dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_emailId"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="15dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_altEmailId"
                        android:hint="@string/alt_email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColorHint="@color/text_black"
                        android:theme="@style/TextLabel">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText_state"
                            android:hint="@string/state"
                            android:drawableEnd="@drawable/ic_action_arrow_down"
                            android:drawableTint="@color/text_gray"

                            android:textColor="@color/text_black"
                            android:textSize="15sp"
                            android:nextFocusRight="@id/editText_district"
                            android:singleLine="true"
                            android:focusable="false"
                            android:clickable="false"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_stateId"
                    android:text="State Id"
                    android:textSize="16sp"
                    android:textColor="@color/text_black"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/prompt_separator"
                    android:visibility="gone"
                    />




                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColorHint="@color/text_black"
                        android:theme="@style/TextLabel">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText_district"
                            android:hint="@string/district"
                            android:drawableEnd="@drawable/ic_action_arrow_down"
                            android:drawableTint="#ADADAD"

                            android:textColor="@color/text_black"
                            android:textSize="15sp"
                            android:clickable="false"
                            android:focusable="false"
                            android:singleLine="true" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_districtId"
                        android:text="District Id"
                        android:textSize="16sp"
                        android:textColor="@color/text_black"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:background="@drawable/prompt_separator"
                        android:visibility="gone"
                        />




                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColorHint="@color/text_black"
                        android:theme="@style/TextLabel">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText_taluka"
                            android:hint="@string/taluka"
                            android:drawableEnd="@drawable/ic_action_arrow_down"
                            android:drawableTint="#ADADAD"
                            android:textColor="@color/text_black"
                            android:textSize="15sp"
                            android:singleLine="true"
                            android:focusable="false"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_talukaId"
                        android:text="Taluka Id"
                        android:textSize="16sp"
                        android:textColor="@color/text_black"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:background="@drawable/prompt_separator"
                        android:visibility="gone"
                        />


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColorHint="@color/text_black"
                        android:theme="@style/TextLabel">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText_pincode"
                            android:hint="@string/pincode"
                            android:drawableEnd="@drawable/ic_action_arrow_down"
                            android:drawableTint="#ADADAD"
                            android:drawableTintMode="add"
                            android:inputType="number"
                            android:maxLength="6"
                            android:textColor="@color/text_black"
                            android:textSize="15sp"
                            android:singleLine="true"
                            />

                    </com.google.android.material.textfield.TextInputLayout>





            </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="30dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_address"
                        android:hint="@string/address"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:inputType="textMultiLine"
                        />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

                <!--"TextInputLayout" is used with a styling theme...-->









        </ScrollView>




    </LinearLayout>

