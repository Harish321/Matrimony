<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp"
        android:orientation="vertical">



<!--        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/shadow_down" />-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="29.7dp"
                android:layout_marginStart="29.7dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="15dp"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_companyName"
                        android:hint="@string/company_name"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:inputType="textMultiLine"
                        android:maxLines="3"
                        android:lineSpacingMultiplier="1.2"
                        />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="20dp"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_occupation"
                        android:hint="@string/occupation"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:inputType=""
                        android:maxLines="1"
                        android:clickable="false"
                        android:focusable="false"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_occupationId"
                    android:visibility="gone"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="15dp"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_designation"
                        android:hint="@string/designation"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:clickable="false"
                        android:focusable="false"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_designationId"
                    android:visibility="gone"
                    />



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="15dp"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_experience"
                        android:hint="@string/experience"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:inputType="number"
                        android:maxLength="2"
                        />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="15dp"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_income"
                        android:hint="@string/annual_income"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:clickable="false"
                        android:focusable="false"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_income"
                    android:visibility="gone"
                    android:text="@string/_0"
                    />



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="15dp"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_companyAddress"
                        android:hint="@string/company_address"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:inputType="textMultiLine"
                        android:lineSpacingMultiplier="1.2"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/text_black"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="15dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_companyCountry"
                        android:hint="@string/country"
                        android:drawableEnd="@drawable/ic_action_arrow_down"
                        android:drawableTint="@color/text_gray"

                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:nextFocusRight="@id/editText_district"
                        android:singleLine="true"
                        android:focusable="false"
                        android:clickable="false"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_companyCountryId"
                    android:visibility="gone"
                    android:text="@string/_0"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/text_black"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="15dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_companyState"
                        android:hint="@string/_state"
                        android:drawableEnd="@drawable/ic_action_arrow_down"
                        android:drawableTint="@color/text_gray"

                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:nextFocusRight="@id/editText_district"
                        android:singleLine="true"
                        android:focusable="false"
                        android:clickable="false"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_companyStateId"
                    android:visibility="gone"
                    android:text="@string/_0"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="30dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColorHint="@color/text_black"
                        android:theme="@style/TextLabel">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText_companyDistrict"
                            android:hint="@string/_district"
                            android:drawableEnd="@drawable/ic_action_arrow_down"
                            android:drawableTint="#ADADAD"

                            android:textColor="@color/text_black"
                            android:textSize="15sp"
                            android:clickable="false"
                            android:focusable="false"
                            android:singleLine="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_companyDistrictId"
                        android:visibility="gone"
                        android:text="@string/_0"
                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColorHint="@color/text_black"
                        android:theme="@style/TextLabel">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText_companyTaluka"
                            android:hint="@string/_taluka"
                            android:drawableEnd="@drawable/ic_action_arrow_down"
                            android:drawableTint="#ADADAD"
                            android:textColor="@color/text_black"
                            android:textSize="15sp"
                            android:singleLine="true"
                            android:focusable="false"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_companyTalukaId"
                        android:visibility="gone"
                        android:text="@string/_0"
                        />

                </LinearLayout>



            </LinearLayout>

            <!--"TextInputLayout" is used with a styling theme...-->










        </ScrollView>




    </LinearLayout>

    <!--"alignParentBottom" property is used to stitch the textview
    at the bottom pf the screen...-->
