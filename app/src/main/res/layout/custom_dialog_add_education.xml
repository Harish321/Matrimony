    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="50dp"
        android:layout_below="@id/include_toolbar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="5dp"
            >


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:cardElevation="0.5dp"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:gravity="center"
            >



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel"
                android:layout_marginTop="8dp"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText_educationLevel"
                    android:hint="@string/education_level"
                    android:textColor="@color/text_black"
                    android:textSize="15sp"
                    android:clickable="false"
                    android:focusable="false"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_educationLevelId"
                android:text="id"
                android:visibility="gone"
                />


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel"
                android:layout_marginTop="8dp"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText_institue"
                    android:hint="@string/institue_university"
                    android:textColor="@color/text_black"
                    android:textSize="15sp"
                    android:inputType="textCapWords"
                    android:maxLines="5"
                    android:lineSpacingMultiplier="1.2"
                    />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        </androidx.cardview.widget.CardView>






            <!--Permanent Address-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/address_"
                android:textSize="13sp"
                android:textColor="@color/grey_4a"
                android:layout_marginStart="15dp"
                android:textAllCaps="true"
                />

            //Permanent Address
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                app:cardElevation="0.5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="5dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >

                    <!--Address-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/TextLabel"
                        android:layout_marginTop="15dp"
                        >

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText_address"
                            android:hint="@string/address_"
                            android:textColor="@color/text_black"
                            android:textSize="15sp"
                            android:inputType="textMultiLine|textCapWords"
                            android:lineSpacingMultiplier="1.2"
                            />

                    </com.google.android.material.textfield.TextInputLayout>



