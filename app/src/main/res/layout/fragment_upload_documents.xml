<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quantum_grey100"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <!--android:layout_marginEnd="29.7dp"
                android:layout_marginStart="29.7dp"-->

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardElevation="0.5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="0dp"
                            android:weightSum="2">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxHeight="350dp"
                                android:id="@+id/imageView_aadharCard"
                                android:src="@drawable/edit"
                                />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:id="@+id/textView_upload"

                                android:layout_marginTop="10dp"
                                android:text="Upload"
                                android:background="@drawable/gradient_place_order"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                            />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/TextLabel"
                                android:layout_marginTop="10dp"
                                >

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/editText_uid"
                                    android:hint="UID"
                                    android:digits="@string/only_text_with_space"
                                    android:textColor="@color/text_black"
                                    android:textSize="15sp"
                                    android:enabled="false"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:clickable="false"

                                    />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/TextLabel"
                                android:layout_marginTop="10dp"
                                >

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/editText_name"
                                    android:hint="@string/name"
                                    android:digits="@string/only_text_with_space"
                                    android:textColor="@color/text_black"
                                    android:textSize="15sp"
                                    android:enabled="false"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:clickable="false"

                                    />

                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/TextLabel"
                                android:layout_marginTop="10dp"
                                >

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/editText_birthdate"
                                    android:hint="@string/birthdate"
                                    android:digits="@string/only_text_with_space"
                                    android:textColor="@color/text_black"
                                    android:textSize="15sp"
                                    android:enabled="false"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:clickable="false"

                                    />

                            </com.google.android.material.textfield.TextInputLayout>




                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>









            </LinearLayout>


        </ScrollView>




    </LinearLayout>





</RelativeLayout>