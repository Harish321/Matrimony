<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp"
        android:orientation="vertical">





        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="29.7dp"
                    android:layout_marginStart="29.7dp"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >


                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="8dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:src="@drawable/noimage"
                        app:civ_border_width="0.2dp"
                        app:civ_border_color="@color/transparent"
                        android:pointerIcon="zoom_out"
                    />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="7dp"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/add8"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="0.5dp"
                        app:civ_circle_background_color="@color/white" />

                    <!-- <de.hdodenhof.circleimageview.CircleImageView
                         android:layout_width="40dp"
                         android:layout_height="40dp"
                         android:layout_marginTop="50dp"
                         android:layout_marginStart="50dp"
                         android:src="@drawable/add4"
                         app:civ_border_color=""
                         app:civ_border_width="1dp"
                         />-->
                </RelativeLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_profileName"
                        android:layout_marginTop="5dp"
                        android:text="Saloni"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textColor="@color/text_black"
                        android:paddingStart="5dp"
                        android:minWidth="90dp"
                    />

                </LinearLayout>



            </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_bio"
                        android:inputType="textMultiLine"
                        android:minLines="1"
                        android:hint="@string/bio"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:scrollbars="vertical"
                        android:gravity="top|left"
                        android:maxLines="4"
                        android:overScrollMode="ifContentScrolls"
                        android:lineSpacingMultiplier="1.2"

                        />
                </com.google.android.material.textfield.TextInputLayout>


<!--                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="29.7dp"
                    android:layout_marginStart="29.7dp"
                    android:background="@drawable/shadow_down"
                    />-->

                   <!-- <ImageView
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:id="@+id/imageView_upload"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/noimage"
                        android:scaleType="fitCenter"
                        android:background="@drawable/img"
                        android:layout_gravity="center"
                    />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="29.7dp"
                    android:layout_marginStart="29.7dp"
                    android:layout_marginTop="15dp"
                    android:minWidth="50dp"
                    android:paddingStart="5dp"
                    android:text="Gallery"
                    android:textColor="@color/text_black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="29.7dp"
                    android:layout_marginStart="29.7dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageView_addNew"
                        android:layout_marginTop="8dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:src="@drawable/add14"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/black"
                        app:civ_circle_background_color="@color/white"
                        >

                    </de.hdodenhof.circleimageview.CircleImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="5dp"
                            android:text="New"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:textColor="@color/text_black"
                            android:paddingStart="5dp"
                            android:minWidth="50dp"
                            />


                    </LinearLayout>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"

                    android:background="@drawable/shadow_down"
                    />

                <GridView
                    android:layout_width="match_parent"
                    android:minHeight="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:id="@+id/gridView_gallery"
                    android:numColumns="3"
                    android:layout_marginBottom="50dp"
                    >
                </GridView>

            </LinearLayout>





        </ScrollView>





    </LinearLayout>







