<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"

    >
    <item android:height="150dp" android:drawable="@drawable/gradient_place_order" />

    <item  android:height="50dp"  android:start="10dp" android:end="250dp" android:top="0dp" android:bottom="130dp" >
        <bitmap  android:alpha="0.1" android:src="@drawable/white_icon"/>
    </item>
    <item  android:height="120dp" android:gravity="center" android:start="250dp" android:end="0dp" android:top="-50dp">
        <bitmap  android:gravity="center" android:alpha="0.1" android:src="@drawable/white_icon"/>
    </item>



    <item android:top="60dp"
        android:bottom="-80dp"
        android:left="-10dp"
        android:right="-150dp"
        android:height="120dp"
        >

        <rotate android:fromDegrees="4"
            android:pivotX="0%"
            android:pivotY="0%">

            <shape android:shape="rectangle">
                <solid android:color="?android:colorBackground"/>
            </shape>
        </rotate>

    </item>







</layer-list>